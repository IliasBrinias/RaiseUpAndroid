<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
        <item name="android:paddingBottom">@dimen/basic_padding_20dp</item>
        <item name="android:paddingTop">@dimen/basic_padding_20dp</item>
    </style>

    <style name="title_reg_log" parent="title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="activity">
        <item name="android:padding">@dimen/basic_padding_20dp</item>
        <item name="android:background">?back_color</item>
    </style>

    <style name="input_field">
        <item name="android:fontFamily">@font/euclid_circular_a_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/ic_input_field_back</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="edit_field" parent="input_field">
        <item name="android:drawableEnd">@drawable/ic_edit</item>
        <item name="android:drawableTint">?text_color</item>

    </style>
    <style name="edit_field_task_dsc" parent="edit_field">
        <item name="android:drawableEnd">@drawable/ic_edit</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">?text_color</item>

    </style>
    <style name="submit_button">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?submit_button_color</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
    </style>

    <style name="alternative_option_login" parent="title_reg_log">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="toolbar_button">

        <item name="android:padding">@dimen/basic_padding_20dp</item>
        <item name="android:layout_marginEnd">-20dp</item>
    </style>

    <style name="drawer_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/nav_button_back_selector</item>
        <item name="android:padding">@dimen/basic_padding_20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="drawer_button_txt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/button_color_selector</item>
        <item name="android:fontFamily">@font/euclid_circular_a_regular</item>
    </style>

    <style name="nav_button_color">
        <item name="tint">@drawable/button_color_selector</item>
    </style>

    <style name="fragment">
        <item name="android:background">?back_color</item>
    </style>

    <style name="bottomSheet">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/basic_padding_20dp</item>
        <item name="android:background">@drawable/ic_alert_dialog_back</item>
        <item name="layout_behavior">android.support.design.widget.BottomSheetBehavior</item>
    </style>

    <style name="task_dsc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?shadow_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_regular</item>
    </style>

    <style name="task_date_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_regular</item>
    </style>

    <style name="nav_tag_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
    </style>

    <style name="task_activity_label">
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="payment_of_terms_item_head">
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="payment_of_terms_item">
        <item name="android:textColor">?text_color</item>
        <item name="android:fontFamily">@font/euclid_circular_a_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="nav_board_attr">
        <item name="android:textColor">?text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/euclid_circular_a_bold</item>
    </style>

    <style name="nav_board_attr_header">
        <item name="android:textColor">?text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/euclid_circular_a_semibold</item>
    </style>

</resources>