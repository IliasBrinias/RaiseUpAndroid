<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_input_field_back"
    android:padding="@dimen/basic_padding_20dp"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">
    <TextView
        android:id="@+id/textViewTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        style="@style/title_reg_log"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/task_dsc"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="end">
        <ImageView
            android:id="@+id/imageViewProfile0"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_profile"/>
        <ImageView
            android:id="@+id/imageViewProfile1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="-20dp"
            android:translationZ="-3dp"
            android:background="@drawable/ic_profile"/>
        <ImageView
            android:id="@+id/imageViewProfile2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="-20dp"
            android:translationZ="-6dp"
            android:background="@drawable/ic_profile"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/task_dsc"
        android:text="25/11/2023"/>
</androidx.appcompat.widget.LinearLayoutCompat>