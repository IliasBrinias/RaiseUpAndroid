<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_input_field_back"
    android:backgroundTint="@drawable/add_employee_color_selector"
    android:backgroundTintMode="src_over"
    android:layout_marginBottom="10dp"
    android:paddingStart="@dimen/basic_padding_20dp"
    android:paddingEnd="@dimen/basic_padding_20dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/imageViewTaskColor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_input_field_back"
        app:tint="@color/black"
        android:tintMode="add"/>
    <View
        android:layout_width="@dimen/basic_padding_20dp"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/textViewTagName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag Name"
        style="@style/title_reg_log"/>
</LinearLayout>